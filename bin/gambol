#!/usr/bin/php
<?php

declare (strict_types=1);

namespace Gambol;

$composerHome = trim(shell_exec('composer global config home'));

if (!$composerHome) {
    fwrite(STDERR, "Error: unable to determine Composer home directory");
    exit(1);
}

require $composerHome . '/vendor/autoload.php';

Handler::run($argv);